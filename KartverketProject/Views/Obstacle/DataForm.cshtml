@using KartverketProject.Dtos
@model Obstacle

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register Obstacle";

    var unseenJson = TempData["UnseenReportReasons"] as string;
    var unseenReasons = !string.IsNullOrEmpty(unseenJson)
        ? System.Text.Json.JsonSerializer.Deserialize<List<ReasonRequest>>(unseenJson)
        : new List<ReasonRequest>();
}

@if (unseenReasons != null && unseenReasons.Any())
{
    <div id="reportReasonAlerts" class="fixed top-40 right-4 space-y-2 z-50">
        @foreach (var reason in unseenReasons)
        {
            <div id="report-@reason.ReportId"
                 class="max-w-sm w-full bg-blue-100 border border-blue-300 text-blue-800 px-4 py-3 rounded shadow flex justify-between items-start">
                <div>
                    <strong class="font-semibold">Report Reason:</strong>
                    <p class="mt-1">@reason.ReportReason</p>
                </div>
                <button onclick="dismissReportReason(@reason.ReportId)"
                        class="ml-4 text-blue-600 hover:text-blue-800 font-bold">
                    &times;
                </button>
            </div>
        }
    </div>
}


<!-- CSS -->
<link rel="stylesheet" href="~/css/map.css" />
<link rel="stylesheet" href="~/css/dark.css" />

<!-- Mobil support-->
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

<!-- Kart -->
<div id="map-wrapper">
    <div id="map"></div>
</div>

<!-- Form -->
<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold">Obstacle Registration Form</h1>
            <p class="text-gray-600 mt-1">Please register an obstacle:</p>
        </header>

        <form asp-action="DataForm" method="post" class="space-y-5">
            @Html.AntiForgeryToken()

            <div class="grid gap-5 sm:grid-cols-2">

                <input type="hidden" asp-for="ObstacleJSON" id="ObstacleJSON" />

                <input type="hidden" asp-for="ObstacleSubmittedDate" id="ObstacleSubmittedDate" />

                <!-- ObstacleName -->
                <div class="sm:col-span-2">
                    <label asp-for="ObstacleName" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Name</label>
                    <input asp-for="ObstacleName"
                           class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., Wall, Ramp" />
                    <span asp-validation-for="ObstacleName" class="text-sm text-red-600"></span>
                </div>

                <!-- Height -->
                <div>
                    <label asp-for="ObstacleHeight" class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Height (meters)
                    </label>
                    <input asp-for="ObstacleHeight" type="number" step="0.01" min="0"
                           class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., 2.5" />
                    <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600"></span>
                </div>

                <!-- Description -->
                <div class="sm:col-span-2">
                    <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Description
                    </label>
                    <textarea asp-for="ObstacleDescription" rows="4"
                              class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                              placeholder="Describe the obstacle, materials, location, etc."></textarea>
                    <span asp-validation-for="ObstacleDescription" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="pt-2">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-green-600 px-4 py-2 text-white hover:bg-green-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                    Submit Data
                </button>
            </div>
        </form>
    </div>
</section>

<div class="pt-4 flex items-center justify-end">
    <button type="button" id="darkModeToggle"
            class="inline-flex items-center px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        Toggle Dark Mode
    </button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/form.js"></script>
    <script src="~/js/alert.js"></script>
    <script>
        const toggleButton = document.getElementById('darkModeToggle');

        toggleButton.addEventListener('click', function () {
            document.body.classList.toggle('dark-mode');
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
            } else {
                localStorage.setItem('theme', 'light');
            }
        });

        window.onload = function () {
            if (localStorage.getItem('theme') === 'dark') {
                document.body.classList.add('dark-mode');
            }
        };
    </script>
}
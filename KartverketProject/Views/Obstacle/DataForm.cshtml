@model Obstacle

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register Obstacle";
}


<!-- CSS -->
<link rel="stylesheet" href="~/css/map.css" />
<link rel="stylesheet" href="~/css/dark.css" />

<!-- Mobil support-->
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

<!-- Kart -->
<div id="map-wrapper">
    <div id="map"></div>
    <div>
        <!--  Marker Mode -->
        <button type="button" id="markerIcon" class="icon" title="Marker Mode">
            <!-- Heroicons Map Pin (solid) – arver grønnfarge fra CSS via currentColor -->
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke="none" aria-hidden="true">
                <path d="M12 2.25c-3.728 0-6.75 3.022-6.75 6.75 0 4.303 6.75 12.75 6.75 12.75S18.75 13.303 18.75 9c0-3.728-3.022-6.75-6.75-6.75zM12 11.25a2.25 2.25 0 1 1 0-4.5 2.25 2.25 0 0 1 0 4.5z" />
            </svg>
        </button>

        <!--  Dark Mode -->
        <button type="button" id="darkIcon" class="icon" title="Dark Mode">
            <!-- Heroicons Sun (outline) – kun stroke, ingen fill -->
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M12 3v1.5m0 15V21m9-9h-1.5M4.5 12H3m15.364 6.364l-1.061-1.061M6.697 6.697L5.636 5.636m12.728 0l-1.061 1.061M6.697 17.303l-1.061 1.061M16.5 12a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0z" />
            </svg>
        </button>

        <!-- Reset Marker -->
        <button type="button" id="trashIcon" class="icon" title="Reset Marker">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
        </button>
    </div>
    <div id="noMarker" style="color: red; font-size: 16px">Please add a marker</div>
</div>

<!-- Form -->
<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold">Obstacle Registration Form</h1>
            <p class="text-gray-600 mt-1">Please register an obstacle:</p>
        </header>

        <form asp-action="DataForm" method="post" class="space-y-5">
            @Html.AntiForgeryToken()

            <div class="grid gap-5 sm:grid-cols-2">

                <input type="hidden" asp-for="ObstacleJSON" id="ObstacleJSON" />

                <input type="hidden" asp-for="ObstacleSubmittedDate" id="ObstacleSubmittedDate" />

                <!-- ObstacleName -->
                <div class="sm:col-span-2">
                    <label asp-for="ObstacleName" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Name</label>
                    <input asp-for="ObstacleName"
                           class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., Wall, Ramp" />
                    <span asp-validation-for="ObstacleName" class="text-sm text-red-600"></span>
                </div>

                <!-- Height -->
                <div>
                    <label asp-for="ObstacleHeight" class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Height (meters)
                    </label>
                    <input asp-for="ObstacleHeight" type="number" step="0.01" min="0"
                           class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., 2.5" />
                    <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600"></span>
                </div>

                <!-- Description -->
                <div class="sm:col-span-2">
                    <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Description
                    </label>
                    <textarea asp-for="ObstacleDescription" rows="4"
                              class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                              placeholder="Describe the obstacle, materials, location, etc."></textarea>
                    <span asp-validation-for="ObstacleDescription" class="text-sm text-red-600"></span>
                </div>
            </div>

            <div class="pt-2">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-green-600 px-4 py-2 text-white hover:bg-green-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                    Submit Data
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/form.js"></script>
    <script src="~/js/dark.js"></script>
}
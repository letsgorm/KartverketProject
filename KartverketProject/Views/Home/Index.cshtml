@model string
@{
    ViewData["Title"] = "Home Page";
}

<section class="mx-auto max-w-3xl">
    <div class="text-center space-y-4">
        <h1 class="text-3xl sm:text-4xl font-bold tracking-tight">Welcome</h1>
        <p class="text-base sm:text-lg text-gray-700">
            Kartverket Project - the obstacle registration system for pilots.
        </p>
        @if (!string.IsNullOrWhiteSpace(Model))
        {
            <p class="text-gray-800">@Model</p>
        }
        <div class="pt-4">
            <a asp-action="DataForm" asp-controller="Obstacle"
               class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-blue-600 text-blue-700 hover:bg-blue-50">
                Register Obstacle
            </a>
        </div>
    </div>
</section>

@model KartverketProject.Models.Report
@{
    ViewData["Title"] = "Delete Report";
}

<h2 class="text-xl font-semibold mb-4">Delete Report</h2>

<p>Are you sure you want to delete this report for obstacle: <strong>@Model.Obstacle?.ObstacleName</strong>?</p>

<form asp-action="DeleteReportConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="reportId" value="@Model.ReportId" />

    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
        Confirm Delete
    </button>
    <a asp-action="EditReport" asp-route-id="@Model.ObstacleId"
       class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500">
        Cancel
    </a>
</form>

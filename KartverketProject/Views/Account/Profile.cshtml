@using KartverketProject.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<div class="min-h-screen bg-gray-100 flex flex-col items-center pt-20">
    <!-- Profile Card -->
    <div class="bg-white shadow-lg rounded-xl p-8 flex flex-col items-center w-80">
        <!-- Dummy SVG Profile Pic -->
        <svg class="w-24 h-24 text-gray-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
        </svg>

        <!-- User Info -->
        <h2 class="text-2xl font-semibold mb-2">@user?.UserName</h2>
        <p class="text-gray-500">Department: @user?.Department</p>
    </div>
</div>

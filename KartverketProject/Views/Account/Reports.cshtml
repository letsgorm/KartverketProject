@model IEnumerable<KartverketProject.Models.Report>

<h2 class="text-2xl font-semibold mb-4">My Reports</h2>

@if (!Model.Any())
{
    <p>You haven’t submitted any reports yet.</p>
}
else
{
    <table class="table-auto w-full border-collapse border border-gray-300">
        <thead class="bg-gray-100">
            <tr>
                <th class="border border-gray-300 px-4 py-2 text-left">Obstacle</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Reason</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr class="border-b hover:bg-gray-50 transition">
                    <td class="border border-gray-300 px-4 py-2">@report.Obstacle?.ObstacleName</td>

                    <!-- Status with colored pill badges -->
                    <td class="border border-gray-300 px-4 py-2 font-medium">
                        @if (report.Obstacle?.ObstacleStatus == "Approved")
                        {
                            <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                                Approved
                            </span>
                        }
                        else if (report.Obstacle?.ObstacleStatus == "Rejected")
                        {
                            <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold">
                                Rejected
                            </span>
                        }
                        else
                        {
                            <span class="inline-block bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">
                                Pending
                            </span>
                        }
                    </td>

                    <td class="border border-gray-300 px-4 py-2">
                        @if (!string.IsNullOrEmpty(report.ReportReason))
                        {
                            <span class="text-gray-600">@report.ReportReason</span>
                        }
                        else
                        {
                            <span class="text-gray-500">—</span>
                        }
                    </td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a asp-controller="Account"
                           asp-action="EditReport"
                           asp-route-id="@report.ReportId"
                           class="text-blue-600 hover:underline">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
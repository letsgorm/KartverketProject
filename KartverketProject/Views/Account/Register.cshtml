@using KartverketProject.Dtos
@model RegisterRequest

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post" class="space-y-6">
    @Html.AntiForgeryToken()

    <!-- Username -->
    <div class="sm:col-span-2">
        <label asp-for="UserName" class="block text-sm font-medium text-gray-800 mb-1">Username</label>
        <input asp-for="UserName"
               class="border p-2 rounded w-full" />
        <span asp-validation-for="UserName" class="text-sm text-red-600"></span>
    </div>

    <!-- Email -->
    <div class="sm:col-span-2">
        <label asp-for="Email" class="block text-sm font-medium text-gray-800 mb-1">Email</label>
        <input asp-for="Email"
               class="border p-2 rounded w-full" />
        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
    </div>

    <!-- Password -->
    <div class="sm:col-span-2">
        <label asp-for="Password" class="block text-sm font-medium text-gray-800 mb-1">Password</label>
        <input asp-for="Password"
               class="border p-2 rounded w-full" type="password" />
        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
    </div>

    <!-- Validation summary -->
    <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

    <!-- Register button -->
    <div class="pt-4">
        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded w-full sm:w-auto">
            Register
        </button>
    </div>
</form>

<!-- Login link -->
<p class="text-sm text-gray-600 text-center mt-6">
    Already have an account?
    <a href="/Account/Login" class="text-blue-600 hover:underline">Login here</a>
</p>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="space-y-4">
    <div>
        <label>Email</label>
        <input type="email" name="email" required class="border p-2 rounded w-full" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" required class="border p-2 rounded w-full" />
    </div>
    <button type="submit" class="bg-indigo-700 text-white px-4 py-2 rounded">Login</button>
</form>

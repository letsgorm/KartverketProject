<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kartverket</title>

    <!-- tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // minimal
        tailwind.config = {
          theme: {
            extend: {
              container: { center: true, padding: { DEFAULT: '1rem', md: '1.5rem' } }
            }
          }
        }
    </script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
</head>
<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">

    <!-- sjekker om index -->
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        var isHomePage = currentAction == "index";
        var headerClass = isHomePage
        ? "bg-transparent text-white"
        : "backdrop-blur-md bg-gray-900/80 text-white shadow-lg";

    }

    <!-- sett header transparent kun index -->
    <partial name="_Header" model="@headerClass" />


    <!-- navaerende view inject -->
    <div class="container flex-1 w-full pt-[7rem] md:pt-[9rem]">
        <main role="main" class="py-6 min-h-[calc(100vh-9rem)]">
            @RenderBody()
        </main>
    </div>


    <!-- footer -->
    <footer class="border-t bg-white text-sm text-gray-600">
        <div class="container py-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
            <p>&copy; 2025 - Kartverket Obstacle Registry</p>
            <p>
                <a class="text-blue-700 hover:underline"
                   asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>

    <!-- scripts -->
    <script src="~/css/site.css"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
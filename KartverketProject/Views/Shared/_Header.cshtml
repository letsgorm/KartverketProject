@model string

<header class="fixed top-0 left-0 w-full z-[9999] @Model transition-all duration-300">
    <nav class="flex items-center justify-between px-10 py-6">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-3">
            <img src="~/Images/logo/last_ned__2_-removebg-preview.png" alt="Kartverket Logo" class="h-10 w-auto" />
            <span class="text-2xl font-bold tracking-wide text-white">Kartverket</span>
        </a>

        <nav class="space-x-6 flex items-center">
            <nav class="space-x-6 flex items-center">
                <!-- Home -->
                <a href="/" class="group inline-flex items-center justify-center px-3 py-2 rounded-full hover:bg-white/15 hover:scale-110 transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                    class="w-6 h-6 mr-1 text-white group-hover:text-blue-300 transition-colors duration-300">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 9.75L12 3l9 6.75V21H3V9.75z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 21V12h6v9" />
                    </svg>
                    <span class="text-white group-hover:text-blue-300 transition-colors duration-300">Home</span>
                </a>

                <!-- Auth Links -->
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    @* Show OverviewAll for reviewers and admins *@
                    @if (User.IsInRole("reviewer") || User.IsInRole("admin"))
                    {
                        <!-- All Reports for reviewers and admins -->
                        <a asp-controller="Account" asp-action="OverviewAll"
                           class="group inline-flex items-center justify-center px-3 py-2 rounded-full hover:bg-white/15 hover:scale-110 transition-all duration-300">
                            <!-- Stack of documents icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                 class="w-6 h-6 mr-1 text-white group-hover:text-blue-300 transition-colors duration-300">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M3 5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25v15.5a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 20.75V5.25z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 9.75h18" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25h9" />
                            </svg>
                            <span class="text-white group-hover:text-blue-300 transition-colors duration-300">All Reports</span>
                        </a>
                    }
                    else
                    {
                        <!-- Map -->
                        <a href="/Obstacle/DataForm" class="group inline-flex items-center justify-center px-3 py-2 rounded-full hover:bg-white/15 hover:scale-110 transition-all duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                 class="w-6 h-6 mr-1 text-white group-hover:text-blue-300 transition-colors duration-300">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 11.25c1.242 0 2.25-1.008 2.25-2.25S13.242 6.75 12 6.75 9.75 7.758 9.75 9s1.008 2.25 2.25 2.25z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 2.25c4.556 0 8.25 3.694 8.25 8.25 0 5.25-8.25 11.25-8.25 11.25S3.75 15.75 3.75 10.5C3.75 5.944 7.444 2.25 12 2.25z" />
                            </svg>
                            <span class="text-white group-hover:text-blue-300 transition-colors duration-300">Map</span>
                        </a>
                    }

                    <!-- My Reports for normal users -->
                    <a asp-controller="Account" asp-action="Reports"
                       class="group inline-flex items-center justify-center px-3 py-2 rounded-full hover:bg-white/15 hover:scale-110 transition-all duration-300">
                        <!-- Single user/document icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             class="w-6 h-6 mr-1 text-white group-hover:text-blue-300 transition-colors duration-300">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M12 14.25c2.485 0 4.5-2.015 4.5-4.5S14.485 5.25 12 5.25 7.5 7.265 7.5 9.75s2.015 4.5 4.5 4.5z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M19.5 20.25v-1.125a4.875 4.875 0 00-4.875-4.875h-3.75A4.875 4.875 0 006.75 19.125V20.25" />
                        </svg>
                        <span class="text-white group-hover:text-blue-300 transition-colors duration-300">My Reports</span>
                    </a>

                    <!-- Logout -->
                    <a asp-controller="Account" asp-action="Logout"
                       class="group inline-flex items-center justify-center px-3 py-2 rounded-full hover:bg-white/15 hover:scale-110 transition-all duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             class="w-6 h-6 mr-1 text-white group-hover:text-blue-300 transition-colors duration-300">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15 12H3m12 0l-3-3m3 3l-3 3M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-white group-hover:text-blue-300 transition-colors duration-300">Logout</span>
                    </a>
                }
            </nav>
    </nav>
</header>
